{
  "name": "motley-fool-extension",
  "version": "1.0.0",
  "type": "module",
  "description": "This Chrome extension displays the Motley Fool icon with category labels next to tracked stock symbols on Alpaca Markets and eToro.",
  "main": "background.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:mutation": "stryker run",
    "test:mutation:incremental": "stryker run --incremental",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/jest-runner": "^9.4.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.3.0",
    "playwright": "^1.57.0",
    "rollup": "^4.54.0"
  }
}
