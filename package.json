{
  "name": "text-marker-extension",
  "version": "1.0.0",
  "type": "module",
  "description": "Chrome extension for text pattern detection and marking with customizable badges and tooltips",
  "main": "background.js",
  "scripts": {
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "TARGET=chrome rollup -c rollup.config.ts --configPlugin typescript",
    "build:firefox": "TARGET=firefox rollup -c rollup.config.ts --configPlugin typescript",
    "build:all": "npm run build:chrome && npm run build:firefox",
    "watch": "npm run watch:chrome && npm run watch:firefox",
    "watch:chrome": "TARGET=chrome rollup -c rollup.config.ts --configPlugin typescript -w",
    "watch:firefox": "TARGET=firefox rollup -c rollup.config.ts --configPlugin typescript -w",
    "type-check": "tsc --noEmit && tsc --noEmit -p tsconfig.test.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:mutation": "stryker run",
    "test:mutation:incremental": "stryker run --incremental",
    "test:e2e": "playwright test",
    "test:e2e:chrome": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:headed": "playwright test --headed",
    "firefox:run": "npm run build:firefox && web-ext run --source-dir=dist-firefox",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:failed": "playwright test --last-failed",
    "lint": "eslint . --ext .ts,.tsx",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "format:write": "prettier --write \"**/*.{ts,js,json,md}\"",
    "prebuild": "npm run type-check",
    "precommit": "npm run format:write && ./pre-commit-check.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/jest-runner": "^9.4.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.3.0",
    "playwright": "^1.57.0",
    "rollup": "^4.54.0"
  }
}
